<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_players_bg" >

    <EditText
        android:id="@+id/player4"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="145dp"
        android:layout_marginTop="127dp"
        android:ems="10"
        android:hint="Player Name"
        android:lines="1"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/player5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player4"
        android:layout_below="@+id/player4"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Player Name"
        android:lines="1"
        android:textSize="30dp" >
    </EditText>

    <EditText
        android:id="@+id/player6"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player5"
        android:layout_below="@+id/player5"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Player Name"
        android:lines="1"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="177dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Player Name"
        android:lines="1"
        android:minLines="1"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player1"
        android:layout_alignTop="@+id/imageView2"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Player Name"
        android:lines="1"
        android:minLines="1"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/player3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignTop="@+id/imageView3"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Player Name"
        android:minLines="1"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/player4"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/player4"
        android:src="@drawable/army_blue" />
<ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/player5"
        android:src="@drawable/army_purple" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignTop="@+id/player6"
        android:src="@drawable/army_green" />

    

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/player1"
        android:layout_marginRight="114dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:src="@drawable/army_orange" />

    

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignTop="@+id/player2"
        android:src="@drawable/army_cyan" />

    

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignTop="@+id/player3"
        android:src="@drawable/army_yellow" />
    <requestFocus />

    <ImageView
        android:id="@+id/startBattleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player3"
        android:layout_below="@+id/player3"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/start_battle_btn_inactive" />

</RelativeLayout>
