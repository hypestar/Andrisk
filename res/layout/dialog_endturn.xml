<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/endTurnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="TextView" />

    <Button
        android:id="@+id/tacticalMoveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endTurnText"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/endTurnText"
        android:text="Tactical Move" />

    <Button
        android:id="@+id/endTurnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tacticalMoveBtn"
        android:layout_alignBottom="@+id/tacticalMoveBtn"
        android:layout_toRightOf="@+id/endTurnText"
        android:text="End Turn" />

</RelativeLayout>